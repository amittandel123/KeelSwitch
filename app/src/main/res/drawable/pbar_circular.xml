<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:angle="0"
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="10.0"
            android:type="sweep"
            android:useLevel="false">
            <solid android:color="#575758" />
        </shape>

    </item>
    <item android:id="@android:id/progress">
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="10.0">
            <gradient
                android:centerColor="#fcf803"
                android:endColor="#39f704"
                android:startColor="#fc0b03"
                android:type="sweep" />
        </shape>
    </item>
</layer-list>